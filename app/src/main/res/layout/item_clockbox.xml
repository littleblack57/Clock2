<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_clockbox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:layout_margin="5dp"
    >


    <TextView
        android:id="@+id/tv_text_clock"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="30sp"
        android:textColor="#00BFA5"
        android:text="08:12"
        />



<RelativeLayout
    android:id="@+id/rl_relativelayout"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    >



    <TextView
        android:id="@+id/tv_monday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="一"
        android:textSize="@dimen/days_font_size"
        />

    <TextView
        android:id="@+id/tv_tuesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_monday"
        android:text="二"
        android:textSize="@dimen/days_font_size"
        android:layout_marginLeft="@dimen/days_margin_left"/>

    <TextView
        android:id="@+id/tv_wednesday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三"
        android:textSize="@dimen/days_font_size"
        android:layout_toRightOf="@+id/tv_tuesday"
        android:layout_marginLeft="@dimen/days_margin_left"/>

    <TextView
        android:id="@+id/tv_thursday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="四"
        android:textSize="@dimen/days_font_size"
        android:layout_toRightOf="@+id/tv_wednesday"
        android:layout_marginLeft="@dimen/days_margin_left"/>

    <TextView
        android:id="@+id/tv_friday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="五"
        android:textSize="@dimen/days_font_size"
        android:layout_toRightOf="@+id/tv_thursday"
        android:layout_marginLeft="@dimen/days_margin_left"/>

    <TextView
        android:id="@+id/tv_saturday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="六"
        android:textSize="@dimen/days_font_size"
        android:layout_toRightOf="@+id/tv_friday"
        android:layout_marginLeft="@dimen/days_margin_left"/>

    <TextView
        android:id="@+id/tv_sunday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日"
        android:textSize="@dimen/days_font_size"
        android:layout_toRightOf="@+id/tv_saturday"
        android:layout_marginLeft="@dimen/days_margin_left"
        android:layout_marginRight="5dp"/>

</RelativeLayout>

    <TextView
        android:id="@+id/tv_month"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="8/29"
        android:textSize="@dimen/days_font_size"
        />

    <CheckBox
        android:id="@+id/cb_clock_check"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        />

</LinearLayout>